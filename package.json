    "vitest": "^0.26.1"
  },
  "scripts": {
    "vite:dev": "vite src/frontend",
    "server": "NODE_ENV=development POSTGRES_DB=notifier_test npx ts-node-esm --transpile-only --project src/server/tsconfig.json ./src/server/express.ts",
    "build:server:tailwind": "npx tailwindcss -i ./src/server/tailwind.css --config ./tailwind.server.config.cjs -o ./src/server/style.css",
    "db:migrate": "POSTGRES_DB=notifier_test knex migrate:latest",
    "db:rollback": "POSTGRES_DB=notifier_test knex migrate:rollback",
    "db:down": "POSTGRES_DB=notifier_test knex migrate:down",
    "db:test": "POSTGRES_DB=notifier_test vitest --run --threads=false",
    "db:types": "POSTGRES_DB=notifier_test node --loader ts-node/esm/transpile-only  scripts/dbToTs.ts",
    "db:erd": "mmdc -i docs/DB.mmd -o db_erd.svg",
    "db:make": "npx knex migrate:make",
    "test:e2e": "cypress run --e2e",
    "test:unit": "vitest --run",
    "test:component": "cypress run --component",
    "lint": "prettier --write .",
    "build:server": "tsc --project src/server && npm run build:server:tailwind",
    "build:frontend": "vite build src/frontend",
    "build": "npm run build:server && npm run build:frontend",
    "clean": "rm -rf src/*.js && rm -rf src/**/*.js && rm -rf src/frontend/dist"
  }
}
