extends layout.pug

block content
  form(method="POST" action="/sign_up")
    input#timezone(name="timezone" type="hidden") 

    label(for="email") Email
    input#email(name="email" type="email")

    label(for="organization") Organization Name
    input#organization(name="organization")

    label(for="password") Password
    input#password(name="password" type="password")

    button#submit Sign Up

  if flash
    include includes/flash.pug

  script.
    const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone
    document.querySelector("#timezone").value = timezone
